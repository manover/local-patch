#!/bin/bash
PKG=#PACKAGE#

. /usr/share/#PACKAGE#/maint-helper

case $1 in
configure|reconfigure)
	for p in ${index[@]}; do
		patch_file <${PDIR}/$p
	done
	;;
triggered)
	shift
	for f in $@; do
		if [ ! -f "$f" ]; then
			echo "#PACKAGE#: trigger called for non-existing file $f" >&2
			exit 1
		fi
		p=${index[$f]}
		#printf "#PACKAGE#: file %s, patches: %s\n" "$f" "$pl" >&2
		if [ -z "$p" ]; then
			echo "#PACKAGE#: triggered for unknown file $f" >&2
			continue
		else
			patch_file <${PDIR}/$p
		fi
	done
	;;
*)
	;;
esac

#DEBHELPER#
exit 0
